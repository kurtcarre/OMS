@model OMS.Auth.Models.Role
@{ 
	ViewData["Title"] = "New Role";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-lg">
		<form id="create-role" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="RoleName"></label>
				<input class="form-control" asp-for="RoleName" />
				<span asp-validation-for="RoleName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button id="create-form-submit" type="submit" class="btn btn-primary">Create...</button>
				<a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn btn-secondary">Cancel</a>
			</div>
		</form>
	</div>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}