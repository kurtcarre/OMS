@model IEnumerable<OMS.Auth.Models.User>
@{
	ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p><a class="btn btn-primary" asp-area="Admin" asp-controller="User" asp-action="Create">Create...</a></p>

<table class="table">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.UserName)</th>
			<th>@Html.DisplayNameFor(model => model.Email)</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var user in Model)
		{
			<tr>
				<td>@Html.DisplayFor(item => user.UserName)</td>
				<td>@Html.DisplayFor(item => user.Email)</td>
				<td><a asp-area="Admin" asp-controller="User" asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-primary">Reset password</a>&nbsp;<a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-secondary">Edit</a>&nbsp;<a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a></td>
			</tr>
		}
	</tbody>
</table>