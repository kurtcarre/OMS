@using OMS.Auth.Services
@inject SignInManager SignInManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			@*<a  class="nav-link text-light" asp-area="Auth" asp-page="#" title="Manage">Hello @User.Identity.Name!</a>*@
			<div class="dropdown">
				<a href="" class="nav-link text-light" data-toggle="dropdown">Hello @User.Identity.Name!</a>
				<div class="dropdown-menu">
					<a class="nav-link text-dark dropdown-item" asp-area="Auth" asp-page="/Account/ChangePassword" asp-route-id="@User.FindFirst("UserID").Value">Change password</a>
				</div>
			</div>
		</li>
		<li class="nav-item">
			<a asp-area="Auth" asp-page="/Account/Logout" class="nav-link text-light">Logout</a>
		</li>
	}
	else
	{
		@*   <li class="nav-item">
				<a class="nav-link text-light" asp-area="Auth" asp-page="#">Register</a>
			</li>*@
		<li class="nav-item">
			<a class="nav-link text-light" asp-area="Auth" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>